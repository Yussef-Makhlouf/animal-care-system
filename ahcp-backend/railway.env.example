# Railway Environment Variables
# Copy these to your Railway project environment variables

# Database - Railway will provide MongoDB connection string
# MONGODB_URI=your_railway_mongodb_connection_string

# JWT Configuration
JWT_SECRET=ahcp_railway_production_secret_key_2024_secure_random_string_123456789
JWT_EXPIRES_IN=7d

# API Configuration
NODE_ENV=production
PORT=3001
API_DOCS_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration - Update with your frontend domain
CORS_ORIGIN=https://your-frontend-domain.railway.app

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@ahcp.gov.sa

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Bcrypt Rounds
BCRYPT_ROUNDS=12
